{
    "name": "ROS Noetic",
    "image": "osrf/ros:noetic-desktop-full",
    "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "smilerobotics.urdf"
    ],
    "runArgs": [
        "--privileged"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "forwardPorts": [11311],
    "postCreateCommand": "apt-get update && apt-get -y install python3-catkin-tools"
}
